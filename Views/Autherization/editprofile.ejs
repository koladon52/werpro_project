<%- include("../partials/header")%>
    <div style="margin-left :10% ;margin-right: 10%">
        <div class="row justify-content-between" >
            <div class="col-md-5 col-sm-12" style=" margin-top: 10%;" align="center">
                <div class="jumbotron">
                </div>
            </div>   
            <div class="col-md-2 col-sm-0" style=" margin-top: 10%;" align="center">
            </div> 
            <div class="col-md-5 col-sm-12" style="margin-top: 10%; " align="center">
                <div class="jumbotron"  >
                    <h1 style="text-align: center;">Profile</h1>
                        <form action="/findjob/profile/<%= currentUser._id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="<%= currentUser._id %>" ></input>
                            <div style="text-align: left;" class="form-group">
                                <label for="name">First name</label>
                                <input type="text" class="form-control" name="firstname" value="<%= currentUser.firstname %>" >
                            </div>
                            <div style="text-align: left;" class="form-group">
                                <label for="name">Last name</label>
                                <input type="text" class="form-control" name="lastname" value="<%= currentUser.lastname %>">
                            </div>
                            <div style="text-align: left;" class="form-group">
                                <label for="name">Address</label>
                                <input type="text" class="form-control" name="address" value="<%= currentUser.address %>">
                            </div>
                            <div style="text-align: left;" class="form-group">
                                <label for="name">Tel number</label>
                                <input type="text" class="form-control" name="phone" value="<%= currentUser.phone %>">
                            </div> 
                              <br>
                            <input type="file" name="img" accept="image/*" value="<%= currentUser.img %>">  
                            <input type="hidden" name="oldimg" value="<%= currentUser.img %>">  
                                <br>
                            <div align="left">
                                <button  type="submit" class="btn btn-primary">confirm</button> 
                            </div>
                            <br>
                            <div align="left">
                                <a  href="/findjob/profile/<%= currentUser.id %>" type="reset" class="btn btn-primary">cancel</a> 
                            </div>
                        </form>
                </div>
            </div>     
        </div>    
    </div>
<%- include("../partials/footer")%>
