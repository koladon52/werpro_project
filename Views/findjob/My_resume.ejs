<%- include("../partials/header")%>
<% var count = 0%>
<div class="container">
    <ul class="list-unstyled" style="margin-top: 10%;margin-bottom: 10%;">
      <% Resume.forEach(function(resume){ %>
        <% if(resume.user.username === currentUser.username){%>
        <div class="jumbotron"  >
          <div>
          <li class="media" >
            <img src="/images/<%= resume.user.img%>" class="mr-3">
            <div class="media-body">
              <h3 class="mt-0 mb-1"><%= resume.firstname %> <%= resume.lastname %></h3><br>
              <h4> <%= resume.description %> </h4>
              <h5> <%= resume.date %> </h5>
              <a action="GET" href="/My_resume/<%= resume._id %>">See more</a>
            </div>
          </li>
          </div>
          </div>  
      <% count++ }}); %>
      <% if(count === 0){ %>
        <h1><center>ไม่พบข้อมูล</center></h1>
        <% } %>
      </ul>
    </div>
<%- include("../partials/footer")%>