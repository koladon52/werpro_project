                            <div class="form-row mt-4">
                                  <div class="form-group col-lg-4">
                                    <p id="head">ชื่อ-นามสกุล</p> 
                                  </div>
                                <div class="form-group col-lg-2  border-bottom" >
                                    <p><%= resume.firstname %></p>
                                </div>
                                <div class="form-group col-lg-6  border-bottom">
                                    <p id="detail"><%= resume.lastname %></p>
                                </div>
                            </div>
                        <div class="topic">
                            <p><i class="fas fa-address-card"></i>ส่วนที่ 2 : ข้อมูลการสมัครงาน</p>
                            <div class="line"></div> 
                        </div>

                        <div class="form-row">
                            <div class="group col-lg-4">
                                <label id="head">ประเภทงานที่ต้องการสมัคร</lable>
                            </div>
                            <div class="form-group col-lg-4  border-bottom">
                                <p id="detail"><%= resume.jobtype %></p>
                            </div>
                        </div>
                            <div class="form-row">
                                <div class="form-group col-lg-4">
                                    <label id="head">ลักษณะการว่าจ้าง</lable>
                                </div>
                                <div class="form-row col-lg-4  border-bottom">
                                    <p><%= resume.employmenttype %></p>
                                </div>
                            </div>
                            <div class="form-row mt-3">
                                <div class="form-group col-md-4">
                                    <label id="head" for="inputDate">ช่วงเวลาที่สะดวกทำงาน</label>
                                  </div>
                                  <div class="form-group col-md-1">
                                    <p id="head">ตั้งแต่</p> 
                                  </div>
                                <div class="form-group col-md-3  border-bottom" >
                                    <p id="detail"><%= resume.starttime %></p>
                                </div>
                                <div class="form-group col-md-1">
                                    <p id="head">จนถึง</p>
                                </div>
                                <div class="form-group col-md-3  border-bottom">
                                    <p id="detail"> <%= resume.finishtime %> </p>
                                </div>
                            </div>
                        <div class="form-row">
                            <div class="group col-md-4">
                                <label id="head" for="selectTypejob">รายได้ที่คาดว่าจะได้รับ</label>
                            </div>
                            <div class="form-group col-md-4  border-bottom">
                                <p id="detail"><%= resume.salary %></p>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label id="head" for="inputAbout">ข้อมูลเพิ่มเติมเกี่ยวกับผู้สมัครงาน</label>
                            <div>
                                <textarea class="border-bottom" rows="6" style="width: 100%; border: none;" readonly><%= resume.description %></textarea>
                            </div>
                            
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label id="head" for="udloadResume">ดาวน์โหลดเรซูเม่</label>
                            </div>
                            <div class="form-group col-md-4 border-bottom">
                                <a id="detail" href="/resume/<%= resume.file %>" download> คลิกที่นี่</a>
                            </div>
                        </div>
                        <div class="topic">
                            <p><i class="fas fa-phone-alt"></i>ส่วนที่ 3 : ข้อมูลการติดต่อ</p>
                            <div class="line"></div>
                        </div>
                        <!-- <div class="form-group">
                            <label for="inputContact"></label>
                            <textarea class="form-control" id="Textarea" rows="4" name="desc" placeholder="หมายเลขโทรศัพท์, อีเมล หรืออื่นๆที่สามารถใช้ติดต่อสื่อสารกับผู้สมัครงานได้โดยตรง"></textarea>
                        </div>  -->
                        <div class="form-group">
                            <label id="head" for="inputContact">ช่องทางการติดต่อ</label>
                            <div>
                                <textarea class="border-bottom" rows="6" style="width: 70%; border: none; " readonly><%= resume.contact %></textarea>
                            </div>
                            <!-- <textarea class="form-control" id="Textarea" rows="4" name="contact" placeholder="หมายเลขโทรศัพท์, อีเมล หรืออื่นๆที่สามารถใช้ติดต่อสื่อสารกับผู้สมัครงานได้โดยตรง"></textarea> -->
                        </div>
                    </form>
                <div class="form-row ">
                    <form class="col mb-4" style="text-align: left;" action="/findjob/My_resume/<%= resume._id %>/edit?_method=DELETE" method="POST">
                        <div class="left">
                            <button type="submit"class="btn btn-danger col-lg-12 btn-delete">ลบข้อมูล</button> 
                        </div>
                    </form>
                    <form class="col" style="text-align: left;" action="/findjob/My_resume/<%= resume._id %>/edit" method="GET">
                        <div class="right">
                            <button type="submit" class="btn btn-primary btn-edit col-lg-12"> แก้ไขข้อมูล</button> 
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
