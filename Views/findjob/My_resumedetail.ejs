                <form style="text-align: left;" action="/findjob/My_resume/<%= resume._id %>/edit " method="GET">
                    <div class="topic">
                            <p><i class="fas fa-user"></i>ส่วนที่ 1 : ข้อมูลส่วนตัว </p>
                            <div class="line"></div>
                        </div>
                        <input type="hidden" name="username" value="<%= currentUser.username %>">
                        <hr>
                        <center><img src="/resumeimage/<%= resume.image %>" class="img-thumbnail" style="width: 700px; height: 480px; object-fit: cover;" align="center"></center>
                        <hr>
