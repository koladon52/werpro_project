<%- include("../partials/header")%>
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>

<div class="container">
    <br>
    <br>
    <form class="form-row" style="text-align: left;" action="/findjob/joblist" method="POST">
      <div class="col-md-3 mb-4">
          <label for="inputcompanyname">บริษัท</label><br>
          <input type="text" id="companyname" name="searchcompanyname" >
      </div>
      <div class="col-md-3 mb-4">
          <label for="selectTypejob">รายได้ที่คาดว่าจะได้รับ</label>
              <select class="form-control" id="salary" name="searchsalary" >
                <option value=""> รายได้ที่คาดว่าจะได้รับ </option>
                <option value="น้อยกว่า 10000 บาท"> น้อยกว่า 10000 บาท</option>
                <option value="10000-20000 บาท"> 10000-20000 บาท</option>
                <option value="20000-30000 บาท"> 20000-30000 บาท</option>
                <option value="30000-40000 บาท"> 30000-40000 บาท</option>
                <option value="40000-50000 บาท"> 40000-50000 บาท</option>
                <option value="50000 บาทขึ้นไป"> 50000 บาทขึ้นไป </option>
              </select>
      </div>
      <br>
      <select class="form-control col-md-3 mb-4" name="searchemploymenttype" > 
        <option value="">ลักษณะการว่าจ้าง</option>
          <option value="Part time">Part time</option>
          <option value="Full time">Full time</option>
          <option value="Event">Event</option>
      </select>
     
      <br>
      <div align="right">
        <button type="submit" class="btn btn-primary mb-2">Search</button> 
      </div>  

    </form>


  <h1 class="my-4">JOB LIST
    <!-- <small>find your job</small> -->
    </h1>
        <% Job.forEach(function(job){ %>
        <!-- Project One -->
        <div class="row">
          <div class="col-md-7">
            <a href="#">
              <img class="img-fluid rounded mb-3 mb-md-0" src="/jobimage/<%= job.image %>"  width="700" height="300" alt="">
            </a>
          </div>
          
          <div class="col-md-5">
            <h3><%= job.companyname %></h3>
            <p><%= job.qualti %></p>
            <p><%= job.employmenttype %></p>
            <p><%= job.salary %></p>
            <a action="GET" class="btn btn-primary" href="/findjob/joblist/<%= job._id %>">View Project</a>
          </div>
            
        </div>
        <!-- /.row -->
      <hr>
      <% }); %>
  
</div>

<style>
