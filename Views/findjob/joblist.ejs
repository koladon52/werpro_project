  color:#007bff;
}
.bookmark-post span:nth-child(1)
{
  font-size: 32px;
}
.bookmark-post span:nth-child(2)
{
  font-size: 14px;
}

.bookmark-post-saved
{
  display: grid;
  grid-template-columns: 100%;
  cursor: pointer;
}
.bookmark-post-saved span:nth-child(1) 
{
  font-size: 32px;
}
.bookmark-post-saved span:nth-child(1) i
{
  color: #007bff
}
.bookmark-post-saved span:nth-child(2)
{
  font-size: 16px;
  color: #007bff;
}

.carousel
{
    padding: 5px;
    background-color: white;
}
</style>
