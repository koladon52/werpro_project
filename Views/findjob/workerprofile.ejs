<%- include("../partials/header")%>
<head>
    <link rel="stylesheet" href="/css/workerprofile.css">
</head>
<body>
 <div class="container col-xs-6 col-sm-8 col-md-11 col-lg-9">
    <div class="row" >
        <div class="col-lg-5 col-md-5 col-sm-12" align="center">
            <div class="personal-img">
                <img style="width: 300px; height: 300px; object-fit: cover;" src="/images/<%= currentUser.img %>" class="img-thumbnail"> 
            </div>
        </div>   
        
        <div class="col-lg-7 col-md-7 col-sm-12" style="margin-top: 5%;">
            <div class="personal-info form-row">
                <div class="col-lg-10 col-md-12 col-sm-12">
                <h1>my account</h1>
                <div class="line"></div>
                
                <form action="/findjob/profile/<%= currentUser._id %>/edit" method="GET">
                      <div class="col-xs-9 col-sm-9 col-md-12 col-lg-12">
                        <div style="text-align: left;" class="form-row">
                          <label  class="left" for="name"><i class="fas fa-user-astronaut"></i>Username </label>
                            <label class="right" for="name"> <%= currentUser.username %></label>
                        </div>
                        <div style="text-align: left;" class="form-row">
                            <label class="left" for="name"><i class="fas fa-envelope"></i>Email </label>
                            <label class="right" for="name"> <%= currentUser.email %></label>
                        </div>
                        <div style="text-align: left;" class="form-row">
                            <label class="left" for="name"><i class="fas fa-swatchbook"></i>Type </label>
                            <label class="right" for="name"> <%= currentUser.type %></label>
                        </div>
                        <hr class="col-xs-4">
                        <!-- <div class="row">
                          <div style="text-align: left;" class="form-group">
                            <label for="name">Firstname </label>
                            <label class="form-control" for="name"> <%= currentUser.firstname %></label>
                        </div>
                        <div style="text-align: left;" class="form-group">
                            <label for="name">Lastname </label>
                            <label class="form-control" for="name"> <%= currentUser.lastname %></label>
                        </div>
                      </div> -->
                      <div class="form-row">
                        <div class="col-xs-9 col-sm-9 col-md-12 col-lg-6">
                            <label for="name">ชื่อ </label>
                            <label class="form-control"  for="name" readonly ><%= currentUser.firstname %> </label>
                        </div>
                        <div class="col-xs-9 col-sm-9 col-md-12 col-lg-6">
                            <label for="inputLastname">นามสกุล</label>
                            <lable class="form-control"  aria-readonly="ture" ><%= currentUser.lastname %> </label>
                        </div>
                    </div>
                    <div class="form-row">
                       <div class="col-xs-9 col-sm-9 col-md-12 col-lg-12">
                          <label for="name">หมายเลขโทรศัพท์ </label>
                          <label class="form-control" for="name" readonly> <%= currentUser.phone %></label>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="col-xs-9 col-sm-9 col-md-12 col-lg-12">
                         <label for="name">ที่อยู่</label>
                         <textarea readonly class="form-control" for="name" rows="4"><%= currentUser.address %></textarea>
                     </div>
                   </div>
                    <div class="row col-xs-9 col-sm-9 col-md-12 col-lg-12" style="align-content: center;"> 
                            <button type="submit" class="btn-edit btn btn-primary col-lg-12">Edit profile</button>
                    </div>
                </div>
                </div>
              </form>
            </div>  
        </div>
    </div>     
    </div>    
</div> 
</body>
<%- include("../partials/footer")%>

