        </div>
        <input type="hidden" id="lon" value="<%= job.lon %>">
        <input type="hidden" id="lat" value="<%= job.lat %>">
        <a href="/jobapplication/<%= job.file %>" download>ดาวโหลดเอกสาร</a>
    </div>
    <div align="right">
        <button  type="submit" class="btn btn-warning"> Edit </button> 
    </div>
    </form>
    <form  action="/findworker/My_post/<%= job._id %>/edit?_method=DELETE" method="POST">
    <div align="right">
        <input type="hidden" id="file" name = "file" value="<%= job.file %>">
