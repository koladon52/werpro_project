  <h1 class="my-4">WORKER LIST
    <!-- <small>find your job</small> -->
  </h1>
  <div class="list col-lg-12">
    
    <% if(Resume.length == "0" && dosearch == true){ %>
      <h1><center>ไม่พบงานที่ตรงกัน</center></h1>
      <% } else if (Resume.length != "0" && dosearch == true){ %>
        <h1><center>พบงานที่ตรงกัน <%= Job.length %></center></h1>
      <%} else if ( dosearch == false) {%>
      <% } %>
      <% Resume.forEach(function(resume){ %>
          <div class="card col-lg-12">
              <div class="card-body col-lg-12">
                  <div class="border-block col-lg-12">
                    <div class="row col-lg-12">
                      <div class="col-lg-4">
                        <a href="#">
                          <img style="width: 600px; height: 250px; object-fit: cover;" class="img-fluid rounded mb-3 mb-md-0"  src="/resumeimage/<%= resume.image %>" alt="">
                        </a>
                      </div>
                      <div class="col-lg-8">
                        <div class="row col-lg-12 font-weight-bold">
                          <img src="../../images/briefcase.svg" alt="" id="icon-list" class="mr-2">
                          <p> 
                        </div>
                        <div class="row col-lg-12">
                          <img src="../../images/shopper.svg" alt="" id="icon-list" class="mr-2">
                          <p >ชื่อ <%= resume.firstname%> <%= resume.lastname %></p>
                        </div>
                        <div class="row col-lg-12 justify-content-between">
                          <div class="row col-lg-6">
                            <img src="../../images/deal.svg" alt="" id="icon-list" class="mr-2">
                            <p><%= resume.employmenttype %></p>
                          </div>
                        <div class="row col-lg-6">
                            <img src="../../images/signature.svg" alt="" id="icon-list" class="mr-2">
                            <p><%= resume.jobtype %></p>
                        </div>
                        </div>
                        
                        <div class="row col-lg-12">
                          <img src="../../images/money.svg" alt="" id="icon-list" class="mr-2">
                          <p><%= resume.salary %></p>
                        </div>
                        <div class="row col-lg-12">
                          <img src="../../images/map.svg" alt="" id="icon-list" class="mr-2">
